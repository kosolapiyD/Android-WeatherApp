<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#e6e6e6"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/conditionImageView"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:contentDescription="@string/weather_condition_image"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/conditionImageView"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/list_items_text"/>

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/descriptionTextView"
        android:layout_toEndOf="@id/conditionImageView"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/list_item_day_text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/temp_margin_end"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/list_items_text"/>

    <TextView
        android:id="@+id/highTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lowTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/temp_margin_end"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/list_items_text"
        android:textStyle="bold"/>

</RelativeLayout>